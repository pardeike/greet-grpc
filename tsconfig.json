{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "allowJs": true,
        "sourceMap": true,
        "rootDir": "src",
        "outDir": "./dist",
        "strict": true,
        "noImplicitAny": false,
        "strictNullChecks": false,
        "baseUrl": "./",
        "typeRoots": ["node_modules/@types"],
        "esModuleInterop": true,
        "plugins": [
            {
                "transform": "./transformers/transformer.ts"
            }
        ]
    }
}
